@import 'functions'

html, body
    height: 100%
    margin: 0px
    padding: 0px

    font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size: 13px
    color: #717171
    background-color: #f3f5f9

.stretch
    height: 100%

.slate
    top: 50%
    vendor(transform, translateY(-50%))

.off
    display: none

.hidden
    visibility: hidden

